        <meta-data
            android:name="com.naver.maps.map.NCP_KEY_ID"
            android:value="h81w25c1vt" />

        <!-- 런처 -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Android_studio">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 마이페이지 -->
        <activity android:name=".ui.mypage.EditInfoActivity" android:exported="false" />
