<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_bg">

    <!-- ✅ 스크롤 영역: 헤더 카드 + 리스트 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:paddingBottom="112dp">

            <!-- ✅ 상단 요약 카드 (배경을 jeju_tint 로 차별화) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/headerSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/jeju_tint"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/divider"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- 출발/도착 (가운데 화살표) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvFrom"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="출발지"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/ink_900" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginHorizontal="8dp"
                            app:tint="@color/ink_700"
                            android:src="@drawable/ic_compare_arrows" />

                        <TextView
                            android:id="@+id/tvTo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="도착지"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/ink_900" />
                    </LinearLayout>

                    <!-- 구분선 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/divider" />

                    <!-- 날짜 -->
                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="2025-08-28"
                        android:textSize="14sp"
                        android:textColor="@color/ink_700" />

                    <!-- 구분선 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/divider" />

                    <!-- 인원 -->
                    <TextView
                        android:id="@+id/tvPax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="총 1명"
                        android:textSize="14sp"
                        android:textColor="@color/ink_700" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ✅ 결과 리스트 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- ✅ 하단 고정 바: 루트(FrameLayout)의 '직계 자식' 이어야 함! -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_gravity="bottom"
        android:layout_margin="12dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/surface"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp"
        app:strokeColor="@color/divider"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 결제 금액"
                    android:textSize="12sp"
                    android:textColor="@color/ink_600" />

                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₩0"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/ink_900" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProceed"
                android:layout_width="180dp"
                android:layout_height="52dp"
                android:text="결제하기"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/jeju_primary" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
