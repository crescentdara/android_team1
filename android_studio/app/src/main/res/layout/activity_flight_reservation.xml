<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/jeju_bg"
    android:padding="30dp">

    <!-- 여행 타입 -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggle_trip_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:singleSelection="true"
        android:layout_marginBottom="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_one_way"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="편도"
            android:textColor="@color/jeju_primary"
            android:backgroundTint="@color/jeju_tint" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_round_trip"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="왕복"
            android:textColor="@color/jeju_primary"
            android:backgroundTint="@color/jeju_tint" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- 출발 / 도착 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/jeju_tint"
        android:paddingHorizontal="20dp"
        android:paddingVertical="30dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tv_departure"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="출발"
            android:textColor="@color/jeju_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/white"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tv_swap"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="↔"
            android:textSize="22sp"
            android:textColor="@color/jeju_primary"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/tv_arrival"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="도착"
            android:textColor="@color/jeju_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/white"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- 날짜 / 인원 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btn_date"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="가는 날 ~ 오는 날"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/jeju_primary" />

        <Button
            android:id="@+id/btn_passenger"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="총 1 명"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/jeju_primary" />
    </LinearLayout>

    <!-- 항공편 검색 -->
    <Button
        android:id="@+id/btn_search_flight"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="항공편 검색"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/jeju_primary" />
</LinearLayout>
