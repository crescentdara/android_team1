<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/brand_bg">

    <!-- ✅ 스크롤 영역 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:clipToPadding="false">

        <!-- ✅ NestedScrollView의 유일한 직계 자식 -->
        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="112dp">

            <!-- 상단 여백 -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <!-- ▽ 토글: 카드 바깥 우측 상단 + 왼쪽 라벨 -->
            <LinearLayout
                android:id="@+id/topToggleBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end|center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/lblTrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="편도 / 왕복"
                    android:textSize="13sp"
                    android:textColor="@color/ink_600"
                    android:layout_marginEnd="8dp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchTripType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:showText="false"
                    app:trackTint="@color/sw_track_tint"
                    app:thumbTint="@color/sw_thumb_tint" />
            </LinearLayout>

            <!-- ▽ 검색 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="16dp"
                app:strokeColor="@color/divider"
                app:strokeWidth="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- 출발 -->
                    <LinearLayout
                        android:id="@+id/boxFrom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/btnSwap"
                        android:layout_marginEnd="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                app:tint="@color/ink_600"
                                android:src="@drawable/ic_flight_takeoff_24" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="출발"
                                android:textSize="12sp"
                                android:textColor="@color/ink_600" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvFrom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="김포(서울)"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/ink_900" />
                    </LinearLayout>

                    <!-- 스왑 (가운데) -->
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnSwap"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        app:backgroundTint="@color/jeju_tint"
                        app:tint="@color/jeju_primary"
                        app:srcCompat="@drawable/ic_swap_rounded_24" />

                    <!-- 도착 -->
                    <LinearLayout
                        android:id="@+id/boxTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/btnSwap">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                app:tint="@color/ink_600"
                                android:src="@drawable/ic_flight_land_24" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="도착"
                                android:textSize="12sp"
                                android:textColor="@color/ink_600" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvTo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="제주"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/ink_900" />
                    </LinearLayout>

                    <!-- 구분선 1 -->
                    <View
                        android:id="@+id/div1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/boxFrom"
                        android:layout_marginTop="14dp"
                        android:background="@color/divider" />

                    <!-- 날짜 -->
                    <LinearLayout
                        android:id="@+id/rowDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/div1"
                        android:layout_marginTop="12dp"
                        android:padding="12dp"
                        android:background="@drawable/bg_row"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            app:tint="@color/jeju_primary"
                            android:src="@android:drawable/ic_menu_today" />

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="가는 날 / 오는 날 선택"
                            android:textColor="@color/ink_900"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- 구분선 2 -->
                    <View
                        android:id="@+id/div2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/rowDate"
                        android:layout_marginTop="12dp"
                        android:background="@color/divider" />

                    <!-- 인원수 -->
                    <LinearLayout
                        android:id="@+id/rowPax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/div2"
                        android:layout_marginTop="12dp"
                        android:padding="12dp"
                        android:background="@drawable/bg_row"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            app:tint="@color/jeju_primary"
                            android:src="@android:drawable/ic_menu_myplaces" />

                        <TextView
                            android:id="@+id/tvPax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="총 1명"
                            android:textColor="@color/ink_900"
                            android:textSize="14sp" />
                    </LinearLayout>

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 검색 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSearch"
                style="@style/Widget.App.PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:text="항공편 검색" />

            <!-- 결과 리스트 (부모 스크롤과 충돌 방지) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- ⛔️ 스크림 제거: 스크롤 막지 않도록 -->
    <!-- (bottomScrim 블록 삭제) -->

    <!-- ✅ 하단 고정 바 (총 결제 금액 + 버튼만) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_gravity="bottom"
        android:layout_margin="12dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/surface"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp"
        app:strokeColor="@color/divider"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <!-- 왼쪽: 총 결제 금액 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 결제 금액"
                    android:textSize="12sp"
                    android:textColor="@color/ink_600" />

                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₩0"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/ink_900" />
            </LinearLayout>

            <!-- 오른쪽 버튼: 포인트 컬러 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProceed"
                android:layout_width="180dp"
                android:layout_height="52dp"
                android:text="오는 편 선택하기"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                app:backgroundTint="@color/jeju_primary" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
