<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/surface"
    app:strokeColor="@color/divider"
    app:strokeWidth="1dp">

    <LinearLayout
        android:padding="14dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 상단: 항공사/편명/가격 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvAirline"
                android:text="대한항공"
                android:textStyle="bold"
                android:textColor="@color/ink_900"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvPrice"
                android:text="₩56,900~"
                android:textStyle="bold"
                android:textColor="@color/jeju_primary"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="8dp"/>

        <!-- 시간 라인 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/tvDepartTime"
                android:text="07:20"
                android:textStyle="bold"
                android:textColor="@color/ink_900"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvDuration"
                android:text="1시간 10분"
                android:textColor="@color/ink_600"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvArriveTime"
                android:text="08:30"
                android:textStyle="bold"
                android:textColor="@color/ink_900"
                android:textSize="20sp"
                android:gravity="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvFlightNo"
            android:text="KE1704 · B737 · 직항"
            android:textColor="@color/ink_600"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBook"
            style="@style/Widget.App.PrimaryButton"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="예매하기"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
