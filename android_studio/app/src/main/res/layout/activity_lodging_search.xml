<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ✅ 메인 컨텐츠 -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- SwipeRefreshLayout -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 스크롤 컨테이너 -->
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:overScrollMode="never">

                <!-- 스크롤 내부 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- ✅ 공통 헤더 -->
                    <include
                        android:id="@+id/header"
                        layout="@layout/inc_header_jeu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!-- 🔎 도시/읍면동/리 선택 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- 도시 -->
                        <com.google.android.flexbox.FlexboxLayout
                            android:id="@+id/layoutCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            app:flexWrap="wrap"
                            app:justifyContent="center" />

                        <!-- 읍/면/동 -->
                        <com.google.android.flexbox.FlexboxLayout
                            android:id="@+id/layoutTown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:visibility="gone"
                            app:flexWrap="wrap"
                            app:justifyContent="flex_start" />

                        <!-- 리 -->
                        <com.google.android.flexbox.FlexboxLayout
                            android:id="@+id/layoutVill"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:visibility="gone"
                            app:flexWrap="wrap"
                            app:justifyContent="flex_start" />

                        <!-- 날짜/인원 -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDateGuest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="날짜, 인원 선택"
                            android:textSize="16sp"
                            style="@style/Widget.Material3.Button" />

                        <!-- 숙소 검색 -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSearch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="숙소 검색"
                            android:textSize="16sp"
                            style="@style/Widget.Material3.Button" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- 플로팅 버튼 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:contentDescription="@string/app_name"
            app:srcCompat="@android:drawable/ic_input_add"
            app:backgroundTint="@color/jeju_tint"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- ✅ 드로어 -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:headerLayout="@layout/nav_header_jeu"
        app:menu="@menu/drawer_menu_jeu"
        app:itemBackground="@drawable/nav_item_bg_jeu"/>
</androidx.drawerlayout.widget.DrawerLayout>
