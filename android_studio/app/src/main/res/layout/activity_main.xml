<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBg_je">

        <!-- 헤더 -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorBg_je"
            android:elevation="6dp"
            app:title=""
            app:menu="@menu/main_toolbar_menu"
            app:contentInsetStartWithNavigation="0dp">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="12dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/jeu_logo"
                android:contentDescription="@string/app_name"/>
        </com.google.android.material.appbar.MaterialToolbar>

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!-- 스크롤 영역 -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 사진 슬라이더 -->
                <FrameLayout
                    android:id="@+id/sliderContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                    <!-- 좌/우 버튼: 항상 보이되 연하게 -->
                    <ImageButton
                        android:id="@+id/btnPrev"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginStart="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:alpha="0.45"
                        app:srcCompat="@drawable/ic_chevron_left"
                        app:tint="@color/colorPrimary_je"
                        android:contentDescription="@string/prev_image"/>

                    <ImageButton
                        android:id="@+id/btnNext"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:alpha="0.45"
                        app:srcCompat="@drawable/ic_chevron_right"
                        app:tint="@color/colorPrimary_je"
                        android:contentDescription="@string/next_image"/>


                    <!-- 하단 중앙 점 인디케이터 -->
                    <LinearLayout
                        android:id="@+id/dotsContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal" />
                </FrameLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <!-- 2×2 메뉴 카드 (텍스트 좌상단, 아이콘 우하단 정렬) -->
                <androidx.gridlayout.widget.GridLayout
                    android:background="@color/colorBg_je"
                    android:id="@+id/gridMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:columnCount="2"
                    app:rowOrderPreserved="false">

                    <!-- Flights -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardFlight"
                        style="@style/Widget.Material3.CardView.Elevated"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/menu_card_height"
                        android:layout_margin="@dimen/menu_item_margin"
                        app:cardBackgroundColor="@color/colorTextLight"
                        app:cardForegroundColor="@android:color/transparent"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:layout_columnWeight="1">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <!-- 텍스트: 좌상단 -->
                            <TextView
                                android:id="@+id/txtFlights"
                                style="@style/Jeu.MenuCardLabel.SCD7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|top"
                                android:layout_margin="@dimen/menu_item_margin"
                                android:text="Flights"
                                android:maxLines="2"
                                android:ellipsize="end"/>

                            <!-- 아이콘: 우하단 (크게) -->
                            <ImageView
                                android:layout_width="@dimen/menu_icon_size"
                                android:layout_height="@dimen/menu_icon_size"
                                android:layout_gravity="end|bottom"
                                android:layout_margin="@dimen/menu_item_margin"
                                app:srcCompat="@drawable/ic_flight_takeoff"
                                app:tint="@color/colorPrimary_je"
                                android:contentDescription="Flights icon"/>
                        </FrameLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Hotels -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardHotel"
                        style="@style/Widget.Material3.CardView.Elevated"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/menu_card_height"
                        android:layout_margin="@dimen/menu_item_margin"

                        app:cardBackgroundColor="@color/colorTextLight"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:layout_columnWeight="1">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txtHotels"
                                style="@style/Jeu.MenuCardLabel.SCD7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|top"
                                android:layout_margin="@dimen/menu_item_margin"
                                android:text="Hotels"
                                android:maxLines="2"
                                android:ellipsize="end"/>

                            <ImageView
                                android:layout_width="@dimen/menu_icon_size"
                                android:layout_height="@dimen/menu_icon_size"
                                android:layout_gravity="end|bottom"
                                android:layout_margin="@dimen/menu_item_margin"
                                app:srcCompat="@drawable/ic_hotel"
                                app:tint="@color/colorPrimary_je"
                                android:contentDescription="Hotels icon"/>
                        </FrameLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Forum -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardBoard"
                        style="@style/Widget.Material3.CardView.Elevated"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/menu_card_height"
                        android:layout_margin="@dimen/menu_item_margin"

                        app:cardBackgroundColor="@color/colorTextLight"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:layout_columnWeight="1">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txtForum"
                                style="@style/Jeu.MenuCardLabel.SCD7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|top"
                                android:layout_margin="@dimen/menu_item_margin"
                                android:text="Post"
                                android:maxLines="2"
                                android:ellipsize="end"/>

                            <ImageView
                                android:layout_width="@dimen/menu_icon_size"
                                android:layout_height="@dimen/menu_icon_size"
                                android:layout_gravity="end|bottom"
                                android:layout_margin="@dimen/menu_item_margin"
                                app:srcCompat="@drawable/ic_forum"
                                app:tint="@color/colorPrimary_je"
                                android:contentDescription="Forum icon"/>
                        </FrameLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Chat -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardChat"
                        style="@style/Widget.Material3.CardView.Elevated"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/menu_card_height"
                        android:layout_margin="@dimen/menu_item_margin"

                        app:cardBackgroundColor="@color/colorTextLight"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:layout_columnWeight="1">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txtChat"
                                style="@style/Jeu.MenuCardLabel.SCD7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|top"
                                android:layout_margin="@dimen/menu_item_margin"
                                android:text="Chat"
                                android:maxLines="2"
                                android:ellipsize="end"/>

                            <ImageView
                                android:layout_width="@dimen/menu_icon_size"
                                android:layout_height="@dimen/menu_icon_size"
                                android:layout_gravity="end|bottom"
                                android:layout_margin="@dimen/menu_item_margin"
                                app:srcCompat="@drawable/ic_chat_bubble"
                                app:tint="@color/colorPrimary_je"
                                android:contentDescription="Chat icon"/>
                        </FrameLayout>
                    </com.google.android.material.card.MaterialCardView>
                </androidx.gridlayout.widget.GridLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- 푸터: 양옆 딱 붙고 하단 고정 -->
        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary_je"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="찾아오시는 길"
                        android:textColor="@color/colorTextLight"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="개인정보처리방침"
                        android:textColor="@color/colorTextLight"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="저작권정책"
                        android:textColor="@color/colorTextLight"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이메일무단수집거부"
                        android:textColor="@color/colorTextLight"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:padding="4dp"
                        android:src="@android:drawable/ic_menu_share"
                        app:tint="@color/colorBg_je" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:padding="4dp"
                        android:src="@android:drawable/ic_media_play"
                        app:tint="@color/colorBg_je" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:padding="4dp"
                        android:src="@android:drawable/ic_menu_gallery"
                        app:tint="@color/colorBg_je" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="© Ministry of Oceans and Fisheries. All rights reserved."
                android:textColor="@color/colorBg_je"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 드로어: 오른쪽에서 열림 -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:headerLayout="@layout/nav_header_jeu"
        app:menu="@menu/drawer_menu_jeu"
        app:itemBackground="@drawable/nav_item_bg_jeu" />

</androidx.drawerlayout.widget.DrawerLayout>

